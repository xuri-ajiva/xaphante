<Window x:Class="xaphante_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:xaphante_editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <local:ProjectView Margin="0"/>
            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Left"/>
            <local:EditorControl Background="#FF1D1D1D" Foreground="#FFADD6FF" FontFamily="Consolas" FontSize="18" Grid.Column="1" Margin="4,0,0,0"/>
        </Grid>
    </Grid>
</Window>
